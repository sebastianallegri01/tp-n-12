#include <iostream>
#include <string>
#include <sstream>

int contarPalabras(const std::string& cadena) {
    std::stringstream ss(cadena);
    std::string palabra;
    int contador = 0;
  
    while (ss >> palabra) {
        contador++;
    }
  
    return contador;
}

int main() {
    std::string cadena;
    std::cout << "Ingresa una cadena de caracteres: ";
    std::getline(std::cin, cadena);
  
    int numPalabras = contarPalabras(cadena);
    std::cout << "NÃºmero de palabras: " << numPalabras << std::endl;
  
    return 0;
}
